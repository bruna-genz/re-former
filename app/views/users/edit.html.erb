<h1> Update info:</h1>

<% if @user.errors.any? %>
    <ul>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @user do |f| %>
    Username:<br><%= f.text_field :username %><br>
    Email:<br><%= f.text_field :email %><br>
    Password:<br><%= f.password_field :password %><br>
    <%= f.submit %>
<% end %>