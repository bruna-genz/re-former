<% if false %>
<div>
    <h1>Sign in page</h1>
     <div>
         <form accept-charset="UTF-8" action="/users" method="post">            
             <label for="username">Username:</label><br>
             <input id="username" name="user[username]" type="text"><br>
             
             <label for="email">Email:</label></br>
             <input id="email" name="user[email]" type="email"><br>
 
             <label for="password">Password:</label><br>
             <input id="password" name="user[password]" type="password"><br>
 
             <input name="commit" type="submit" value="Create">
             <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
         </form>
     </div>
 </div>
 <% end %>

 <% if false %>
 <%= form_tag("/users", method: "post") do |i| %>

    <%= label_tag(:username, "username")%><br>
    <%= text_field_tag(:username) %><br>

    <%= label_tag(:email, "email")%><br>
    <%= text_field_tag(:email) %><br>

    <%= label_tag(:password, "password")%><br>
    <%= password_field_tag(:password) %><br>

    <%= submit_tag("Create") %>
<% end %>
<% end %>

<%= form_for @user do |f| %>
    Username:<br><%= f.text_field :username, value: "Name" %><br>
    Email:<br><%= f.text_field :email, placeholder: "example@example.com" %><br>
    Password:<br><%= f.password_field :password %><br>
    <%= f.submit %>
<% end %>
